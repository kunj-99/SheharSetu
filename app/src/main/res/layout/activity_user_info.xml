<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootUserInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/page_hpad"
            android:paddingEnd="@dimen/page_hpad"
            android:paddingTop="@dimen/page_vpad"
            android:paddingBottom="120dp">

            <!-- Language Badge -->
            <TextView
                android:id="@+id/tvLangBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language: English"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingBottom="6dp"/>

            <!-- Header -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete Your Profile"
                android:textSize="@dimen/title_text"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <!-- Panel -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/panel_pad"
                    android:background="@android:color/white">

                    <!-- Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        app:hintTextColor="@color/ss_hint"
                        app:boxBackgroundColor="@android:color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Surname -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/field_gap"
                        android:hint="Surname"
                        app:hintTextColor="@color/ss_hint"
                        app:boxBackgroundColor="@android:color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSurname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mobile -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/field_gap"
                        android:hint="Mobile number"
                        app:hintTextColor="@color/ss_hint"
                        app:boxBackgroundColor="@android:color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:singleLine="true"
                            android:inputType="phone"
                            android:maxLength="10"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- State -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/field_gap"
                        android:hint="Select State"
                        app:hintTextColor="@color/ss_hint"
                        app:boxBackgroundColor="@android:color/white">

                        <AutoCompleteTextView
                            android:id="@+id/spState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:inputType="none"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- District -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/field_gap"
                        android:hint="Select District"
                        app:hintTextColor="@color/ss_hint"
                        app:boxBackgroundColor="@android:color/white">

                        <AutoCompleteTextView
                            android:id="@+id/spDistrict"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:inputType="none"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Village / City -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/rgPlaceType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        app:singleSelection="true"
                        android:backgroundTint="@color/brand_green"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/rbVillage"
                            style="@style/Widget.Material3.Chip.Suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Village"
                            app:chipBackgroundColor="@color/chip_bg"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/rbCity"
                            style="@style/Widget.Material3.Chip.Suggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City"
                            app:chipBackgroundColor="@color/chip_bg"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Place name -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/field_gap"
                        android:hint="Village / City Name"
                        app:hintTextColor="@color/ss_hint"
                        app:boxBackgroundColor="@android:color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPlaceName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Address -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/field_gap"
                        android:hint="Full address"
                        app:hintTextColor="@color/ss_hint"
                        app:boxBackgroundColor="@android:color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAddress"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:textColor="@android:color/black"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Pincode -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/field_gap"
                        android:hint="Pincode"
                        app:hintTextColor="@color/ss_hint"
                        app:boxBackgroundColor="@android:color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@android:color/black"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Terms -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cbTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="I agree to the Terms  Conditions"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Login Link -->
            <TextView
                android:id="@+id/tvLoginLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Already have an account? Log in"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Sticky CTA -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:text="Continue"
        android:backgroundTint="@color/brand_green"
        android:textColor="@android:color/white"
        android:enabled="false"
        app:cornerRadius="18dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
