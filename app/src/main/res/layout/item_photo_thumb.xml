<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <FrameLayout
        android:id="@+id/thumbContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_thumb_normal">

        <ImageView
            android:id="@+id/ivThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cover"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_badge_cover"
            android:layout_gravity="top|start"
            android:layout_margin="6dp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRemove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_close_24"
            app:tint="@android:color/white"
            android:background="@drawable/bg_remove_circle"
            android:padding="4dp"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="filename.jpg"
        android:textSize="12sp"
        android:textColor="@color/ss_on_surface"
        android:layout_marginTop="4dp" />
</LinearLayout>
